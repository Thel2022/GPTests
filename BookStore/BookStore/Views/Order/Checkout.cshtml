@using BookStore.ViewModels;
@using System.Globalization;
@model OrderViewModel;

<style>
    .form-group
    {
        margin-bottom: 20px;
    }
    
    .header
    {
        margin-top: 100px;
    }
</style>

<div class="row bg-white offset-3 col-md-5 g-3">
    <h4 class="header text">Оформление заказа</h4>
    <p class="text">Введите своё имя и адрес электронной почты.</p>
<form asp-action="Checkout" method="post" class="form-horizontal">
  <div class="form-group">
    <input asp-for="order.ClientName" class="form-control" placeholder="Введите свое имя">
  </div>
  <div class="form-group">
    <input asp-for="order.Email" class="form-control" placeholder="Введите адрес электронной почты">
  </div>
  <input class="btn btn-success" type="submit" value="Оформить заказ"/>
</form>